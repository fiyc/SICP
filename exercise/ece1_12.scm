;;定义f(x,y)
;;y <= x
;;如果y = 1 || y = x || x = 1,  则f(x,y) = 1
;;否则f(x,y) = f(x-1, y-1) + f(x-1, y) 
(define (f x y)
  (if (or (= y 1) (= y x) (= x 1)) 
      1
      (+ (f (- x 1) (- y 1))
         (f (- x 1) y))))